{
    "manifest_version": 3,
    "name": "Zcash Minimal Wallet",
    "version": "1.0.0",
    "description": "A minimal Zcash wallet with Mina Bridge witness export",
    "action": {
        "default_popup": "index.html",
        "default_title": "Zcash Wallet"
    },
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
    }
}